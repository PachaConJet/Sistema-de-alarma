int notes = sizeof(melody) / sizeof(melody[0]) / 2;
int wholenote = (60000 * 4) / tempo;
int divider = 0, noteDuration = 0;
int estado = 0;

Servo servo;

const byte rows = 4;
const byte cols = 4;
char keyMap [rows] [cols] = {
  {'1','2','3','A'},
  {'4','5','6','B'},
  {'7','8','9','C'},
  {'*','0','#','D'}
};

byte rowPins [rows] = {9,8,7,6};
byte rowPins [rows] = {5,4,3,2};

Keypad teclado = Keypad(makeKeymap(keys), rowPins, colPins, rows, cols); 
char TECLA;                       
char CLAVE[5];                    
char CLAVE_MAESTRA[5] = "0000";    
byte INDICE = 0;                  
LiquidCrystal_I2C lcd(A0,A1,A2,A3,A4,A5);  

int Error = 0;

int buttonPin = 12; //Pin del pulsador
int rojo = 10; //Declarar LEDS
int verde = 11;

//Melodia de la alarma //

int Melody[] = {
NOTE_C4, NOTE_G3, NOTE_G3,NOTE_A3, NOTE_G3, 0, NOTE_B3, NOTE_C4
};
int noteDurations[] = {
 4, 8, 8, 4, 4, 4, 4, 4
};
int Buzzer = 1;

void setup(){
	
  	pinMode(rojo,OUTPUT);
    pinMode(rojo,OUTPUT);
  	digitalWrite(verde,LOW);
  	delay(100);
  	digitalWrite(rojo,HIGH);
  
    servo.attach (12,660,1400);
    servo.write(150);
    limpia();
}

void Loop(){
	TECLA = teclado.getKey();
  
  if (TECLA)
  {
    CLAVE[INDICE] = TECLA;
    INDICE++;
    lcd.print(TECLA);
  }
  
  if (INDICE == 4)
  {
  	if(!strcmp(CLAVE, CLAVE_MAESTRA))
      abierto();
    else
      error();
    
    INDICE = 0;
  }
  if (estado==1 && (digitalRead(buttonPin))== HIGH)
    nueva_clave();
}

// ERROR //

void error()
{
	lcd.setCursor(0,1);
   	lcd.print("ERROR DE CLAVE    ");
  	delay(1000);
  	limpia();
  	Error ++;
  
  if(Error == 3)
  {
  	lcd.setCursor(0,1);
   	lcd.print("Tercer Error    ");
  	buzzerError();
  	limpia();
  }
}

//Abierto o Cerrado//
void abierto ()
{
	if(estado==0)
    {
      estado=1;
      lcd.setCursor(0,1);
      lcd.print("Abierto    ");
      servo.write(30);
      buzzerAbierto();
      delay(3000);
      digitalWrite(rojo,LOW);
      delay(100);
      digitalWrite(verde,HIGH);
    }
  else{
   estado=0;
      lcd.setCursor(0,0);
      lcd.print("Cerrado    ");
      servo.write(150);
      buzzerAbierto();
      delay(3000);
      digitalWrite(verde,LOW);
      delay(100);
      digitalWrite(rojo,HIGH);
  }
  limpia();
}

// Nueva Clave//
void nueva_clave(){  
  lcd.setCursor(0,0);
  lcd.print("NUEVA CLAVE:        ");
  lcd.setCursor(12,0);
  INDICE=0;
  while (INDICE<=3) {
   TECLA = teclado.getKey();  
   if (TECLA)                
    {
      CLAVE_MAESTRA[INDICE] = TECLA;   
      CLAVE[INDICE] = TECLA;
      INDICE++;                 
      lcd.print(TECLA);         
    }   
  }
 estado=0;
  lcd.setCursor(0,1);
  lcd.print("CLAVE CAMBIADA");
  delay(2000);
  limpia();
}

// Limpiar //

void limpia(){  
 lcd.setCursor(0,0);
 lcd.print("CLAVE :          ");
 lcd.setCursor(9,0);
}

// Melodia Buzzer //

void buzzerAbierto(){//Melodia cuando abre
for (int thisNote = 0; thisNote < 8; thisNote++) {
    int noteDuration = 1000 / noteDurations[thisNote];
    tone(8, melody[thisNote], noteDuration);
    int pauseBetweenNotes = noteDuration * 1.30;
    delay(pauseBetweenNotes);
    noTone(8);
	}
}
void buzzerError(){//Melodia cuando se activa la alarma

 for (int thisNote = 0; thisNote < notes * 2; thisNote = thisNote + 2) {
    divider = melody[thisNote + 1];
    if (divider > 0) {
      noteDuration = (wholenote) / divider;
    } else if (divider < 0) {
      
      noteDuration = (wholenote) / abs(divider);
      noteDuration *= 1.5; 
    }
    tone(buzzer, melody[thisNote], noteDuration * 0.9);
    delay(noteDuration);
    noTone(buzzer);
}
}
